<div class="contaner px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/error', model: @book %>
      <%= render 'users/user', user: @user %>
      <%= render 'books/book', book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table table-sm user-index">
        <thead>
          <th>image</th>
          <th>name</th>
          <th></th>
        </thead>
        <tbody>
          <% @user.each do |user| %>
          <tr>
            <td><%= attachment_iamge_tag user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size:"50x50" %></td>
            <td><%= user.name %></td>
            <td><%= link_to "Show", "/users/#[user.id}" %></td>
          </tr>
          <% end %
        </tbody>
      </table>
    </div>
  </div>
</div>