<div class="container">
  <div class="row">
    <div class ="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <%= render 'books/error', model: @user %>
      <h2>User info</h2>
      <%= form_with model:@user, local:true do |f| %>
        <div class="form-group">
          <div class="user-name">Name</div>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        
        <div class="form-group">
          <div class="user-edit-image">Image</div>
          <%= f.attachment_field :profile_image, class: "form-control-file" %>
        </div>
        
        <div class="form-group">
          <div class="form-body">Introduction</div>
          <%= f.text_area :introduction, class: "form-control" %>
        </div>
        
        <div class="form-group">
          <%= f.submit "Update User", class: "btn btn-secondary" %>
        </div>
        
      <% end %>
    </div>
  </div>
</div>